{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "angular-britecharts": [
        "dist/angular-britecharts"
      ],
      "angular-britecharts/*": [
        "dist/angular-britecharts/*"
      ]
    }
  }
}